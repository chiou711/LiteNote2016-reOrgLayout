<!-- whole -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/whole_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

<!-- head -->    
<LinearLayout android:id="@+id/row_head"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:minHeight="110dp"
    android:orientation="horizontal">
<!-- left -->        
    <LinearLayout android:id="@+id/row_head_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

<!-- icon -->        
    <LinearLayout android:id="@+id/row_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/row_id"
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginLeft="3dp"
        android:textStyle="italic"
      	/>  
    <ImageView
        android:id="@+id/img_check"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="0dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="img_check"/>

	<LinearLayout android:id="@+id/row_title_block"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical">
		<TextView
			android:id="@+id/row_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="5dp"
			android:minHeight="50dp"
			android:maxLines="1"
			android:layout_gravity="center_vertical"
			android:contentDescription="@string/note_text"
			android:gravity="center_vertical"
			android:textAppearance="?android:attr/textAppearanceListItemSmall"
			/>

	</LinearLayout>

	<ImageView
        android:id="@+id/img_dragger"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/ic_dragger_off"
        android:contentDescription="@string/drag_handler"/>
    </LinearLayout> <!-- icon -->

<!-- title text -->
	<LinearLayout android:id="@+id/audio_block"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_margin="3dp"
		android:background="@drawable/bg_gray_border"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/img_audio"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_gravity="center"
			android:paddingTop="3dp"
			android:layout_marginRight="0dp"
			android:contentDescription="img_audio"/>
		<TextView
			android:id="@+id/row_audio_name"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:padding="2dp"
			android:minHeight="50dp"
			android:maxLines="4"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:textSize="11sp"
			/>
	</LinearLayout>

   	</LinearLayout> <!-- left -->

<!-- picture -->
   	<LinearLayout
   	    android:id="@+id/image_view_block"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        >
    <ImageView
        android:id="@+id/image_view_thumb_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:contentDescription="img_thumb_picture"/> 
    <ImageView
        android:id="@+id/image_view_thumb_audio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:contentDescription="img_thumb_audio"/>
    <com.cw.litenote.note.CustomWebView
        android:id="@+id/image_view_thumb_web"
        android:layout_width="match_parent"
    	android:layout_height="match_parent" 
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:contentDescription="img_thumb_web" />
    <ProgressBar
        android:id="@+id/img_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />        
    </LinearLayout> <!-- picture -->
	        
    </LinearLayout> <!-- head -->
    
<!-- body -->
   	<LinearLayout
        android:id="@+id/row_body"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	<View android:layout_width="match_parent" 
	      android:layout_height="1dip"
	      android:layout_margin="5dp" 
	      android:background="#777777" />
   	<TextView
        android:id="@+id/row_body_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:maxLines="3"
        android:paddingLeft="15dp"
        android:layout_gravity="center_vertical"
        android:textSize="12sp"
      	/>
   	<!-- test: android:textSize="12sp" -->
   	
   	<TextView
        android:id="@+id/row_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" 
        android:paddingRight="15dp"
      	/>
    </LinearLayout> <!-- body -->
    
</LinearLayout><!-- whole -->